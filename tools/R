#!/bin/sh

SCRIPTPATH=`cd $(dirname "$0") && pwd`

ROOT_DIR="$SCRIPTPATH/.."

R_HOME=`cat $ROOT_DIR/.R_HOME`
CHK=$1
LIBRARY_DIR=`pwd`
PKG="$ROOT_DIR/rir/"

export EXTRA_LOAD_SO=`ls $ROOT_DIR/librir.*`
export EXTRA_LOAD_R="$PKG/R/rir.R"

if [ "$1" = "-headless" ]
then
    $R_HOME/bin/Rscript "${@:2}"
else
    $R_HOME/bin/R "$@"
fi