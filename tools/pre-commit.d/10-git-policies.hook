#!/bin/sh

cd $1

STATUS=`git status --porcelain | grep "^[ \?]" | grep -v "^ M gnur"`
if test "$?" -eq 0; then

    echo "You have unstaged changes in:"
    echo $STATUS
    echo "Hook assume a clean repository!"
    echo "Please stash unstaged changes with git stash first."
    echo ""
    exit 1
fi
